@model InventoryManagement.Models.KeperluanSumur

@{
    ViewData["Title"] = "Hapus Keperluan Sumur";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">Hapus Keperluan Sumur</div>
        <div class="card-body">
            <p>Apakah Anda yakin ingin menghapus keperluan sumur berikut?</p>

            <dl class="row">
                <dt class="col-sm-3">Sumur</dt>
                <dd class="col-sm-9">@Model.Sumur.NamaSumur</dd>

                <dt class="col-sm-3">Material</dt>
                <dd class="col-sm-9">@Model.KodeMaterial - @Model.DeskripsiMaterial</dd>

                <dt class="col-sm-3">Jumlah</dt>
                <dd class="col-sm-9">@Model.Jumlah</dd>
            </dl>

            <form method="post">
                <button type="submit" class="btn btn-danger">Hapus</button>
                <a class="btn btn-secondary" href="/KeperluanSumur">Batal</a>
            </form>
        </div>
    </div>
</div>
