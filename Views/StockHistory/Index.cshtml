@model IEnumerable<InventoryManagement.Models.StockHistory>

@{
    ViewData["Title"] = "Histori Stok Barang";
}

<div class="container mt-4">
    <h1>Histori Stok Barang</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">Tambah Histori Stok</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Kode Material</th>
                <th>Tanggal</th>
                <th>Stok Awal</th>
                <th>Barang Masuk</th>
                <th>Barang Keluar</th>
                <th>Balance</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KodeMaterial</td>
                    <td>@item.TanggalTransaksi.ToString("yyyy-MM-dd")</td>
                    <td>@item.StokAwal</td>
                    <td>@item.BarangMasuk</td>
                    <td>@item.BarangKeluar</td>
                    <td>@item.Balance</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
