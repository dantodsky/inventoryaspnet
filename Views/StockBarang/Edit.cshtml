@model InventoryManagement.Models.StockBarang

@{
    ViewData["Title"] = "Edit Stock Barang";
}

<div class="container mt-4">
    <h1>Edit Stock Barang</h1>
    <form method="post">
        <input type="hidden" name="IdBarang" value="@Model.IdBarang" />
        <div class="form-group">
            <label>Kode Gudang</label>
            <input type="text" name="KodeGudang" class="form-control" value="@Model.KodeGudang" required />
        </div>
        <div class="form-group">
            <label>Kode Material</label>
            <input type="text" name="KodeMaterial" class="form-control" value="@Model.KodeMaterial" required />
        </div>
        <div class="form-group">
            <label>Deskripsi Material</label>
            <input type="text" name="DeskripsiMaterial" class="form-control" value="@Model.DeskripsiMaterial" required />
        </div>
        <div class="form-group">
            <label>Base Unit</label>
            <input type="text" name="BaseUnit" class="form-control" value="@Model.BaseUnit" required />
        </div>
        <div class="form-group">
            <label>Jumlah</label>
            <input type="number" name="Jumlah" class="form-control" value="@Model.Jumlah" required />
        </div>
        <div class="form-group">
            <label>Harga Per Unit</label>
            <input type="number" name="HargaPerUnit" class="form-control" value="@Model.HargaPerUnit" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Simpan</button>
    </form>
</div>
