@{
    ViewData["Title"] = "Daftar Stok Barang";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Barang</th>
            <th>Kode Material</th>
            <th>Deskripsi</th>
            <th>Satuan</th>
            <th>Harga per Unit</th>
            <th>Barang Masuk</th>
            <th>Barang Keluar</th>
            <th>Stok Tersedia</th>
            <th>Tanggal Terakhir Masuk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdBarang</td>
                <td>@item.KodeMaterial</td>
                <td>@item.DeskripsiMaterial</td>
                <td>@item.BaseUnit</td>
                <td>@item.HargaPerUnit</td>
                <td>@item.BarangMasuk</td>
                <td>@item.BarangKeluar</td>
                <td>@item.StokTersedia</td>
                <td>@(item.TanggalTerakhirMasuk?.ToString("dd/MM/yyyy") ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
