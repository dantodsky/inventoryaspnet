@model InventoryManagement.Models.Sumur

@{
    ViewData["Title"] = "Tambah Sumur";
}

<div class="container mt-4">
    <h1>Tambah Sumur</h1>
    <form method="post">
        <div class="form-group">
            <label>Daerah Sumur</label>
            <input type="text" name="DaerahSumur" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Nama Sumur</label>
            <input type="text" name="NamaSumur" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Tanggal Mulai</label>
            <input type="date" name="StartDate" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Simpan</button>
    </form>
</div>
