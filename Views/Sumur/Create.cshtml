@model InventoryManagement.Models.Sumur

@{
    ViewData["Title"] = "Tambah Sumur";
    var areas = ViewData["Areas"] as IEnumerable<InventoryManagement.Models.Areas>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Tambah Sumur</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form method="post">
                        <div class="form-group">
                            <label>Nama Sumur</label>
                            <input type="text" name="NamaSumur" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label>Daerah Sumur</label>
                            <select name="IdAreas" class="form-control" required>
                                <option value="">-- Pilih Area --</option>
                                @foreach (var area in areas)
                                {
                                    <option value="@area.IdAreas">@area.NamaArea</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Tanggal Mulai</label>
                            <input type="date" name="StartDate" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a class="btn btn-secondary" href="/Sumur">Batal</a>
                            <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
