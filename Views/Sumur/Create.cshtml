@model InventoryManagement.Models.Sumur

@{
    ViewData["Title"] = "Tambah Sumur";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Tambah Sumur</h4>
        </div>
        <div class="card-body">
            <!-- Error Message -->
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Nama Sumur -->
            <div class="form-group">
                <label asp-for="NamaSumur"></label>
                <input asp-for="NamaSumur" class="form-control" />
                <span asp-validation-for="NamaSumur" class="text-danger"></span>
            </div>

            <!-- Daerah Sumur -->
            <div class="form-group">
                <label for="IdAreas">Daerah Sumur</label>
                <select asp-for="IdAreas" class="form-control"
                        asp-items="@(new SelectList(ViewData["Areas"] as List<InventoryManagement.Models.Areas>, "IdAreas", "NamaArea"))">
                    <option value="">-- Pilih Area --</option>
                </select>
                <span asp-validation-for="IdAreas" class="text-danger"></span>
            </div>

            <!-- Tanggal Mulai -->
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Simpan</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
